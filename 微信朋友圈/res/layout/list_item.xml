<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/username_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/username_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text" />

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerallayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layout1"
        android:visibility="invisible"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/layout1"
        android:background="#000" >

        <TextView
            android:id="@+id/zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="赞"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="评论"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pinglun"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/linerallayout"
        android:layout_toRightOf="@id/linerallayout"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>